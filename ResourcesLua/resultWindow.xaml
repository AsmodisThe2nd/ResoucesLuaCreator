<Window x:Class="ResourcesLua.resultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcesLua"
        mc:Ignorable="d"
        Title="workshopResources.lua" Height="550" Width="450" MinHeight="550" MinWidth="450" Icon="pack://application:,,,/ResourcesLua;component/Resources/Icon1.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="95"/>
            <RowDefinition Height="424*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Margin="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <TextBlock TextWrapping="WrapWithOverflow" Margin="10">
                Copy the text from below into a new file under "%gm_server%\garrysmod\lua\autorun\server" where %gm_server% is the path to the root directory of your server. The filename does not matter. You could use "workshopResources.lua" for example.
            </TextBlock>
        </Label>
        <TextBox x:Name="textBox" Margin="10" TextWrapping="Wrap" Text="" Grid.Row="1"/>


    </Grid>
</Window>
